<?xml version="1.0" encoding="UTF-8" ?>
<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
      <style id="container" flex="1" backgroundColor="black" alignItems="center" justifyContent="center" />
      <style id="title" fontSize="24" color="white" marginBottom="32" />
      <style id="message" color="white" fontSize="16" marginBottom="32" textAlign="center" />
      <style id="spinner" width="32" height="32" />
    </styles>
    
    <body style="container">
      <text style="title">OpenAgents</text>
      <text style="message">{message}</text>
      
      <!-- Loading Spinner -->
      <spinner style="spinner" color="white" />
      
      <!-- Auto-redirect after delay -->
      <behavior 
        trigger="load"
        action="wait"
        delay="2000"
        href="{redirect_url}"
        verb="GET"
      />
    </body>
  </screen>
</doc>